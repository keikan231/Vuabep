@model CRS.Web.Areas.Admin.ViewModels.AdminStatistics.StatisticsViewModel
@{
    ViewBag.Title = "Statistics";
    ViewBag.MenuGroup = "Statistics";
    ViewBag.MenuName = "ViewStatistics";
    ViewBag.PageHeader = "Website Statistics";
}
@if (Model != null)
{
    <div class="content-box">
        <div class="content-box-header">
            <h3>
                Statistics</h3>
        </div>
        <div class="content-box-content">
            <div class="statistics">
                <div>
                    <label>
                        Users:</label>
                    <span>@Model.AllUserNumber</span>
                </div>
                <div>
                    <label>
                        News:
                    </label>
                    <span>@Model.NewsNumber</span>
                </div>
                <div>
                    <label>
                        Tips:
                    </label>
                    <span>@Model.TipNumber</span>
                </div>
                <div>
                    <label>
                        Recipes:
                    </label>
                    <span>@Model.RecipeNumber</span>
                </div>
                <div>
                    <label>
                        Approved Recipes:
                    </label>
                    <span>@Model.ApprovedRecipeNumber</span>
                </div>
                <div>
                    <label>
                        Tip Categories:</label>
                    <span>@Model.TipCategoryNumber</span>
                </div>
                <div>
                    <label>
                        Recipe Categories:</label>
                    <span>@Model.RecipeCategoryNumber</span>
                </div>
                <div>
                    <label>
                        Small Recipe Categories:</label>
                    <span>@Model.RecipeSmallCategoryNumber</span>
                </div>
                <div>
                    <label>
                        News Comments:</label>
                    <span>@Model.NewsCommentNumber</span>
                </div>
                <div>
                    <label>
                        Tip Comments:</label>
                    <span>@Model.TipCommentNumber</span>
                </div>
                <div>
                    <label>
                        Recipe Comments:</label>
                    <span>@Model.RecipeCommentNumber</span>
                </div>
                <div>
                    <label>
                        Questions:</label>
                    <span>@Model.QuestionNumber</span>
                </div>
                <div>
                    <label>
                        Answers:</label>
                    <span>@Model.AnswerNumber</span>
                </div>
                <div>
                    <label>
                        All time Visitors:</label>
                    <span>@Model.VisitorNumber</span>
                </div>
                <div>
                    <label>
                        Today Visitors:</label>
                    <span>@Model.VisitorsToday</span>
                </div>
                <div>
                    <label>
                        Online Visitors:</label>
                    <span>@Model.OnlineVistorNumber</span>
                </div>
            </div>
        </div>
    </div>
}