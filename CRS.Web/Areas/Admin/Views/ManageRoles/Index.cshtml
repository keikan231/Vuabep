@using CRS.Web.Models
@using CRS.Common
@model CRS.Web.Areas.Admin.ViewModels.ManageRoles.ListRoleViewModel
@{
    ViewBag.Title = "Manage Roles";
    ViewBag.MenuGroup = "Users";
    ViewBag.MenuName = "ManageRoles";
    ViewBag.PageHeader = "Manage Roles";
}
@(Html.Telerik().Grid(Model.Roles)
           .Name("Users")
           .DataKeys(dataKeys => dataKeys.Add(c => c.Id))
           .ToolBar(commands => commands.Template(
                @<text>
                    @Html.Partial("_AddButton", new ActionInfo("Create a new record", "Create"))
                </text>
           ))
           .Columns(columns =>
           {
               columns.Bound(o => o.Name).Width("250px");
               columns.Bound(o => o.Description).Width("350px").Sortable(false);
               columns.Template(
                   @<text> 
                        @Html.Partial("_EditButton", new ActionInfo("Edit", "Edit") { Id = item.Id })
                        @Html.Partial("_DeleteButton", new ActionInfo("Delete", "Delete") { Id = item.Id })
                   </text>
                );
           })
           .Pageable(pager => pager.PageSize(AppConfigs.DefaultAdminGridPageSize))
           .Sortable()
           .Scrollable(scrolling => scrolling.Enabled(true).Height(350))
)
<script type="text/javascript">
    $(document).ready(function () {
        $(".t-grid-delete").click(function (e) {
            if (!confirm("Are you sure you want to delete this Role?")) {
                return false;
            }
        });
    });
</script>
