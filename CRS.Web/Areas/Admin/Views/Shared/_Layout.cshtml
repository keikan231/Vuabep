@using CRS.Common;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - @Constants.TitleHeading</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/main/favicon.ico")"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/styles/reset.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/styles/admin.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/styles/admin_invalid.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/2012.2.607/telerik.common.min.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/2012.2.607/telerik.telerik.min.css")" type="text/css" media="screen" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/simpla.jquery.configuration.js")" type="text/javascript"></script>
    @RenderSection("Head", required: false)
</head>
<body>
    <div id="body-wrapper">
        @Html.Partial("_Sidebar")
        <div id="main-content">
            <div id="page-header">
                <h2>
                    @ViewBag.PageHeader</h2>
            </div>
            @Html.Partial("_Message")
            @RenderBody()
            <div class="clear">
            </div>
            <div id="footer">
                <small>Copyright © @DateTime.Now.Year Vuabep.vn </small>
            </div>
        </div>
    </div>
    @Html.Telerik().ScriptRegistrar().jQuery(false).Globalization(true)
</body>
</html>
