@model CRS.Web.ViewModels.Questions.InsertQuestionViewModel
@{
    ViewBag.Title = "Thêm câu hỏi mới";
    ViewBag.MenuName = "Questions";
    Layout = "~/Views/Shared/_LayoutQuestion.cshtml";
}
@Html.Partial("_Message")
@if (!User.Identity.IsAuthenticated)
{
    <div class="content-wrapper">
        <h1 class="title">
            Lời nhắn từ Vuabep.vn</h1>
        <div class="boxfullcontent">
            @Html.Partial("_MustLoginMessage")
        </div>
    </div>
}
else if (Model != null)
{
    @Html.ValidationSummary(true, ValidationMessages.Summary)
    <div class="section-headline">
        <div class="section-headline-content">
            <h2>
                Thêm câu hỏi mới</h2>
        </div>
    </div>
    @Html.Partial("_QuestionInputForm", Model)
}