@model CRS.Web.ViewModels.Recipes.InsertRecipeViewModel
@{
    ViewBag.Title = "Sửa công thức nấu ăn";
}
@Html.Partial("_Message")
@if (!User.Identity.IsAuthenticated)
{
    <div class="content-wrapper">
        <h1 class="title">
            Lời nhắn từ Vuabep.vn</h1>
        <div class="boxfullcontent">
            @Html.Partial("_MustLoginMessage")
        </div>
    </div>
}
else if (Model != null)
{
    @Html.ValidationSummary(true, ValidationMessages.Summary)
    <div class="section-headline">
        <div class="section-headline-content">
            <h2>
                Sửa công thức nấu ăn</h2>
        </div>
    </div>
    @Html.Partial("_RecipeInputForm", Model)
}