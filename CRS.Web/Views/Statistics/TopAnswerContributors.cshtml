@{
    Layout = null;
}
@model IList<User>
@using CRS.Business.Models.Entities
@using CRS.Web.Models
@if (Model != null)
{
    if (Model.Count == 0)
    {
    <div>
        Không có thành viên nào
    </div>
    }
    else
    {
    <ul>
        @for (var i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <li class="@(i == Model.Count - 1 ? "last" : "")">
                <div class="user-avatar">
                    <a href="@Url.UserLink(item.Id, item.Username)">
                        <img src="@Url.UserAvatar(item, ImageType.Thumbnail)" alt="@item.Username.Truncate(10)" height="20px" width="20px" class="small-imgavatar"></a>
                </div>
                <a href="@Url.UserLink(item.Id, item.Username)" class="name">
                    @item.Username.Truncate(30)
                </a>
                <div class="numberofpoint">@item.NumberOfAnswers trả lời</div>
            </li>
        }
    </ul>
    }
}