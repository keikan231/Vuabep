@{
    Layout = null;
}
@model IList<Recipe>
@using CRS.Business.Models.Entities;
<ul class="menunav">
    @for (var i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <li class="@(i == Model.Count - 1 ? "last" : "")" title="@item.Title">@Html.RecipeLink(item.Id, item.Title.Truncate(100), item.TitleUrl) <span class="datetime">(@item.PostedDate.ShortDate()) </span>
        </li>
    }
</ul>